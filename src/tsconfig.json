{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "esNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "../dist",
    "baseUrl": ".",
    "removeComments": true,
    "target": "es6",
    "sourceMap": true
  },
  "include": [
    "./demo/**/*.ts"
  ]
}